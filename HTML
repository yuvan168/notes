<!-- Grouping -->
<p> <div> <section> <article>

<!-- Links and images -->
<a href="#"> <img src="#" alt=""> <picture>

<!-- Lists -->
<ul> <ol> <dl>

<!-- Forms -->
<form> <input> <select> <textarea> <button>

<!-- Tables -->
<table> <thead> <tbody> <tr> <th> <td>

<!-- Semantic -->
<header> <nav> <main> <footer> <aside>

<!-- Media -->
<audio> <video> <canvas> <svg>

<!-- Meta info -->
<meta> <title> <link> <script> <style>
```

